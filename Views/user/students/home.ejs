<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../../general/head.ejs")  %>
    <style>
        .modal-content {
            color: black;
            box-shadow: 1px 1px 1px 1px;
        }
    </style> 
    <link rel="stylesheet" href="/css/layout.css">
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/xl.js"></script>
</head>
<body>
    <div class="container-fluid">
        <header>
            <%- include("../../general/navbar.ejs") %>
        </header>
        <div>
            <marquee class="gradient h2" id="msg" direction="right"></marquee>
        </div>
        <div class="row">
            <div class="col-sm-2 col-lg-3">
                <%- include("../../general/listgroup.ejs")  %>
            </div>
            <div class="col-sm-10 col-lg-9">
                <div class="h3 center">
                    Home Student
                </div>
                <div class="modal fade" tabindex="-1" role="dialog" id="modal-login">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h3 class="text-primary">Sign up...</h3>
                                <button class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">
                                        &times;
                                    </span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="text-success text-center">If you have an account</div>
                                <form class="needs-validation" action="/user/login" method="post" novalidate>
                                    <div>
                                        <label for="Email">Your email</label>
                                    </div>
                                    <div class="input-group">
                                        <input type="email" class="form-control" name="Email" id="Email" placeholder="Enter your mail ~ you created" required>
                                        <div class="input-group-append">
                                            <span class="input-group-text" id="Email">@example</span>
                                        </div>
                                    </div>
                                    <br>
                                    <div>
                                        <label for="Password">Your password</label>
                                    </div>
                                    <div class="input-group">
                                        <input type="password" class="form-control" name="Pasword" id="Password" placeholder="Enter your password ~ you created" required>
                                        <div class="input-group-append">
                                            <span class="input-group-text" id="Password">@password</span>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="input-group">
                                        <input type="submit" class="btn btn-primary" value="Login">
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <a href="/user/create" type="button" class="btn btn-primary">Create</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer>

        </footer>
    </div>
    <script src="/lib/jquery/jquery-3.5.1.min.js"></script>
    <script src="/lib/bootstrap-4.5.0-dist/js/bootstrap.js"></script>
    <script src="/js/nofication.js"></script>
    <script src="/js/layout.js"></script>
    <script>
        $(document).ready(() => {
            if(login == 0) {
                $("#modal-login").modal("show");
            }
            else {
                $("#modal-login").modal("hide");
            }
        })
    </script>
</body>
</html>